# CHRONOS-EYE Configuration Template
# Copy this file to .env and configure your settings

# Model Configuration
CLIP_MODEL_NAME=openai/clip-vit-large-patch14
WHISPER_MODEL_NAME=guillaumekln/faster-whisper-large-v2
MODELS_CACHE_DIR=./models

# GPU Settings
DEVICE=auto  # Options: auto, cuda, mps, cpu
QUANTIZATION=float16  # Options: float32, float16, int8

# Frame Sampling
SAMPLING_METHOD=scene_detect  # Options: scene_detect, fixed_interval
FRAMES_PER_SECOND=1  # Used for fixed_interval method
SCENE_THRESHOLD=27.0  # PySceneDetect threshold (0-100)

# Database
CHROMADB_PERSIST_DIR=./chromadb_storage
VECTOR_DIMENSION=768

# Performance
BATCH_SIZE=32
MAX_WORKERS=4

# Media Extensions
VIDEO_EXTENSIONS=.mp4,.mov,.mkv,.avi,.webm
IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.webp,.bmp,.tiff

# Indexing
IGNORE_FILE_NAME=.chronos_ignore
ENABLE_AUDIO_TRANSCRIPTION=false
